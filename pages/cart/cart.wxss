.cart1{
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn{
  height: 100rpx;
  width: 430rpx;
  border:rgb(26,173,25) solid 2rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:rgb(26,173,25);
  font-size: 36rpx;
}
.cart2{
  height: 90rpx;
  border-top: solid red 2rpx;
  border-bottom: solid red 2rpx;
  color: red;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 36rpx;

}
.cartdata{
  height: auto;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 90rpx;
}
.datmenu{
  display: flex;
  border-bottom: 2rpx solid #ddd;
  height: 190rpx;
}
.check{
  width: 20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.datatext{
  display: flex;
  width: 80%;
  height: 100%;
  align-items: center;
  justify-content: space-between;
}
.datatext image{
  width: 160rpx;
  height: 80rpx;
}
.text{
  width: 420rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  font-size: 28rpx;
  color: rgb(101, 101, 102);
}
.text text:nth-child(1){
  width: 100%;
}
.text text:nth-child(2){
  width: 95%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.btn2{
  width: 100%;
  height: 70rpx;
  display: flex;
}
.t1{
  display: flex;
  height: 100%;
  flex: 0 0 60%;
  align-items: center;
  color: red;
  font-size: 34rpx;
}
.bt2{
  display: flex;
  width:200rpx;
  align-items: center;
}
.bt2 text{
  display: flex;
  flex: 0 0 50rpx;
  justify-content: center;
  align-items: center;
}
.bt2 view{
  flex: 0 0 48rpx;
  height: 48rpx;
  border: 2rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cartfoot{
  height: 90rpx;
  border-top: 2rpx solid #ddd;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  background-color: #fff;
}
.fle{
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 28rpx;
}
.frig{
  width: 30%;
  height: 100%;
  display: flex;
}
.all{
  height: 100%;
  flex: 0 0 70rpx;
  display: flex;
  font-size: 28rpx;
}
.price{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.price text:nth-child(1){
  color: red;
  font-weight: bold;
  font-size: 34rpx;
}
.price text:nth-child(2){
font-size: 28rpx;
width: 88%;
display: flex;
justify-content: flex-end;
}
.total{
  width: 30%;
  height: 100%;
  background-color: rgb(235,68,80);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-weight: bold;
}
.goodname{
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  overflow: hidden;

}
.datatext image{
  width: 140rpx;
  height: 140rpx;
}